<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape with rounded corners and stroke -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke
                android:width="4dp"
                android:color="#6115E6" />
        </shape>
    </item>

    <!-- Solid color as the button's background -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Set your desired color here -->
            <corners android:radius="4dp" />
        </shape>
    </item>

</layer-list>
